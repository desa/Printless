<div id="user_list">
<h1 id="all_users">All users</h1>
<div id="user_paginate_top">
<%= will_paginate %>
</div>

<ul class="users">
  <% @users.each do |user| %>
    <li> <%= link_to user.name, user %>
	  <% if current_user.admin? && !(current_user == user) %>
		<%= link_to "Delete", user, confirm: "Are you sure?", method: :delete %>
		<% end %>
    </li><br/><br/>
  <% end %>
</ul>
<div id="user_paginate_bottom">
<%= will_paginate %>
</div>
</div>