<h1>All users</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li> <%= link_to user.name, user %>
	  <% if current_user.admin? && !(current_user == user) %>
		<%= link_to "Delete", user, confirm: "Are you sure?", method: :delete %>
		<% end %>
    </li><br/><br/>
  <% end %>
</ul>

<%= will_paginate %>